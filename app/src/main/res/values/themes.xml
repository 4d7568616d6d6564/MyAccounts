<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorOnBackground">@color/app_primary</item>
        <item name="android:windowBackground">@color/app_surface</item>
        <item name="android:colorBackground">@color/app_primary</item>
        <item name="android:statusBarColor">@color/app_primary</item>
        <item name="android:navigationBarColor">@color/app_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AddAccountTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorOnBackground">@color/app_primary</item>
        <item name="android:windowBackground">@color/app_surface</item>
        <item name="android:colorBackground">@color/app_primary</item>
        <item name="android:statusBarColor">@color/app_primary</item>
        <item name="android:navigationBarColor">@color/app_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="LauncherTheme" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorOnBackground">@color/app_primary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:colorBackground">@color/app_surface</item>
        <item name="android:statusBarColor">@color/app_primary</item>
        <item name="android:navigationBarColor">@color/app_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/app_primary</item>
        <item name="colorAccent">@color/app_primary</item>
        <item name="colorControlActivated">@color/app_primary_accent</item>
        <item name="android:textColor">@color/app_input_text</item>
        <item name="hintTextColor">@color/app_input_hint</item>
        <item name="android:textColorHint">@color/app_input_hint</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="errorTextColor">@color/app_input_error</item>
        <item name="boxStrokeErrorColor">@color/app_input_error</item>
        <item name="cursorErrorColor">@color/app_input_error</item>
        <item name="cursorColor">@color/app_primary_accent</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:strokeWidth">@dimen/_1sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_12sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_12sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_12sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_12sdp</item>
    </style>

    <style name="CustomAutoCompleteTextViewStyle" parent="@style/Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/app_primary</item>
        <item name="colorAccent">@color/app_primary</item>
        <item name="colorControlActivated">@color/app_primary_accent</item>
        <item name="android:textColor">@color/app_input_text</item>
        <item name="hintTextColor">@color/app_input_hint</item>
        <item name="android:textColorHint">@color/app_input_hint</item>
        <item name="boxStrokeColor">@color/app_primary</item>
        <item name="dropDownBackgroundTint">@color/app_surface_container_low</item>
    </style>


    <style name="PinButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="rippleColor">@color/pin_ripple</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/pin_text</item>
        <item name="iconTint">@color/pin_background</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomMaterialCalendar" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/app_primary_accent</item>
        <item name="colorSurfaceContainerHigh">@color/app_primary</item>
        <item name="colorOnPrimary">@color/app_primary</item>
        <item name="colorOnSurface">@color/calendar_on_surface</item>
    </style>

    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorSurface">@color/app_primary_accent</item>
        <item name="colorPrimary">@color/app_primary_accent</item>
        <item name="colorControlActivated">@color/app_primary_accent</item>
    </style>


    <style name="DialogZoomAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/from_bottom</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>